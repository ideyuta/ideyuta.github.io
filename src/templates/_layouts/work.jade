extends ../_base.jade

block content
  .Container._Works
    .inner
      .Main

        .Post._Work
          .Meta
            h2.title {{ page.title }}

          .content
            {{ content }}

        .Response
          ul
            li
              a.twitter-share-button(href="{{ page.url }}", data-text="{{ page.title }}", data-via="_ideyuta")
            li
              .fb-like(data-href="{{ page.url }}", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")
            li
              a.hatena-bookmark-button(href="http://b.hatena.ne.jp/entry/", data-hatena-bookmark-layout="simple-balloon", title="このエントリーをはてなブックマークに追加")
                img(src="http://b.st-hatena.com/images/entry-button/button-only@2x.png", alt="このエントリーをはてなブックマークに追加", width="20", height="20")
            li
              .g-plusone(data-size="medium")
