div(class="Pagination {% if page.previous.url %}{% if page.next.url %}_between{% endif %}{% endif %}")
  {% if page.previous.url %}
  .paginate._previous
    .arrow
      span &laquo;
    .title
      a(href="{{ page.previous.url }}", title="{{ page.previous.title }}") {{ page.previous.title }}
  {% endif %}
  {% if page.next.url %}
  .paginate._next
    .title
      a(href="{{ page.next.url }}", title="{{ page.next.title }}") {{ page.next.title }}
    .arrow
      span &raquo;
  {% endif %}
