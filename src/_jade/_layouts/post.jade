extends default.jade

block ogp
  meta(content="website", property="og:type")
  meta(content="ideyuta.com#BLOG | {{ page.title }}", property="og:title")
  meta(content="http://ideyuta.com{{ page.url }}", property="og:url")
  meta(content="", property="og:image")
  meta(content="{{ page.discription }}", property="og:description" )
 
block title
  title {{ page.title }}

block content
  .Container._Content
    .inner
      .Post
        h2.title {{ page.title }}
        .meta
          ul
            li {{ page.date | date: '%Y. %m. %d' }}
            {% for category in page.categories %}
            li {{ category }}
            {% endfor %}
        .Response
          ul
            li
              a.twitter-share-button(href="{{ page.url }}", data-text="{{ page.title }}", data-via="_ideyuta")
            li
              .fb-like(data-href="{{ page.url }}", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")
            li
              a.hatena-bookmark-button(href="http://b.hatena.ne.jp/entry/", data-hatena-bookmark-layout="simple-balloon", title="このエントリーをはてなブックマークに追加")
                img(src="http://b.st-hatena.com/images/entry-button/button-only@2x.png", alt="このエントリーをはてなブックマークに追加", width="20", height="20")
            li.g-plus
              .g-plusone(data-size="medium")
            li
              a.pocket-btn(data-pocket-label="pocket", data-pocket-count="horizontal", data-lang="en")
        
        .content
          {{ content }}

      .Response
        ul
          li
            a.twitter-share-button(href="{{ page.url }}", data-text="{{ page.title }}", data-via="_ideyuta")
          li
            .fb-like(data-href="{{ page.url }}", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")
          li
            a.hatena-bookmark-button(href="http://b.hatena.ne.jp/entry/", data-hatena-bookmark-layout="simple-balloon", title="このエントリーをはてなブックマークに追加")
              img(src="http://b.st-hatena.com/images/entry-button/button-only@2x.png", alt="このエントリーをはてなブックマークに追加", width="20", height="20")
          li.g-plus
            .g-plusone(data-size="medium")
          li
            a.pocket-btn(data-pocket-label="pocket", data-pocket-count="horizontal", data-lang="en")
